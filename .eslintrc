{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:import/typescript"
  ],
  "rules": {
    "newline-before-return": "warn",
    "newline-after-var": "warn",
    "no-console": "warn",
    "prefer-const": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "../../components/**",
            "patternOptions": {
              "matchBase": true
            },
            "group": "parent",
            "position": "after"
          },
          {
            "pattern": "../../store/**",
            "patternOptions": {
              "matchBase": true
            },
            "group": "parent",
            "position": "after"
          },
          {
            "pattern": "../../hooks/**",
            "patternOptions": {
              "matchBase": true
            },
            "group": "parent",
            "position": "after"
          },
          {
            "pattern": "@mui/**",
            "group": "index",
            "position": "after"
          },
          {
            "pattern": "'../../models/**",
            "group": "type",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": [
          "react",
          "@mui/**"
        ],
        "newlines-between": "always"
      }
    ]
  }
}